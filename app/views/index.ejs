<!DOCTYPE html>
<html>
    <head>
        <title>Login Page</title>
    </head>
    <style>
    body{
        background-color: rgb(180, 199, 98);
    }
    h1{
        text-align: center;
    }
    .madeby {
        margin-top: 30%;
        margin-left: 80%;
    }
    #LogoDiv{
        margin-left: 35%;
        width: fit-content;
        float: left;
    }
    #SignIn{
        margin-left: 80%;
        margin-top: -8%;
    }
    #RegBtn:hover{
        transform: scale(0.85);
    }
    #RegBtn{
        width: 10em; 
    }
    #BtnSignIn:hover{
        transform: scale(0.85);
    }
    #BtnSignIn{
        width: 10em;
    }
    </style>
    <body>
        <marquee direction="right" behaviour="alternate" hspace="35%" scrollamount="8">
            <h1><%= title %></h1>
        </marquee>
        <marquee direction="left" behaviour="alternate" hspace="35%" scrollamount="8">
            <h1>E-Shop Kevin & Georgi</h1>
        </marquee>
        <div id="Register">
            <table>
                <tr><td>Username:<td><input name="username" type="text" size="20" maxlength="20" required autofocus></input></tr>
                <tr><td>First name:<td><input name="firstname" type="text" size="20" maxlength="20" required autofocus></tr>
                <tr><td>Last name:<td><input name="lastname" type="text" size="20" maxlength="20" required autofocus></tr>
                <tr><td>Password:<td><input name="password" type="password" size="20" maxlength="20" required autofocus></tr>
            </table>
        
            <button id="RegBtn" type="button" onclick="alert('Successfully signed up')">Register</button>
        </div>
        <div id="LogoDiv">
            <img src="img/logo.png" alt="Logo">
        </div>
        <div id="SignIn">
            <table>
                <tr><td>Username:<td><input name="username" type="text" size="20" maxlength="20" required autofocus></input></tr>
                <tr><td>Password:<td><input name="password" type="password" size="20" maxlength="20" required autofocus></tr>
            </table>

            <button id="BtnSignIn" type="button" onclick="alert('Successfully signed in')">Sign in</button>
        </div>
        <div class="madeby">&copy; Marketplace 2021 <br> Made by Kevin Nguyen and Georgi Kotsev</div>
        <script>
            document.getElementById("RegBtn").addEventListener("click", myFunction);
            function myFunction() {
                document.getElementById("RegBtn").style.backgroundColor = "red";
            }

            document.getElementById("BtnSignIn").addEventListener("click", yourFunction);
            function yourFunction() {
                document.getElementById("BtnSignIn").style.backgroundColor = "green";
            }
        </script>
    </body>
</html>
